{
  "name": "revendis",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=22 <23",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "turbo dev",
    "dev:restart": "bash scripts/dev-restart.sh",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "openapi:lint": "redocly lint docs/openapi.yaml",
    "openapi:bundle": "redocly bundle docs/openapi.yaml -o docs/openapi.json",
    "openapi:types": "openapi-typescript docs/openapi.yaml -o packages/api-types/src/index.ts",
    "e2e:web": "npm --workspace web run e2e",
    "e2e:mobile:build": "npm --workspace mobile run e2e:build",
    "e2e:mobile": "npm --workspace mobile run e2e",
    "e2e": "npm run e2e:web && npm run e2e:mobile"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@redocly/cli": "^1.19.0",
    "@playwright/test": "^1.51.1",
    "openapi-typescript": "^7.6.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
